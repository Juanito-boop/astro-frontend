---
import Layout from "#layouts/LayoutAdministrador.astro";
import NewProductForm from "#components/react/NewProductForm";
import Link from "#components/Link.astro";
---

<Layout title="Nuevo Producto">
  <div class="grid grid-cols-2 justify-around">
    <div class="flex flex-col px-10 gap-2">
      <h1 class="text-principal-color text-2xl">Crear Producto</h1>
      <NewProductForm client:only="react" />
    </div>
    <div class="flex flex-col gap-4">
      <Link href="dashboard/administrador/productos/new-category" className="rounded-md bg-secondary-color p-4 mx-10 text-center align-middle">
        Crear nueva categoria
      </Link>
    </div>
  </div>
</Layout>